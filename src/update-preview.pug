extends layout/_layout

prepend html
	- var title = "Update preview"
	- var description = "Open version of icon font from upcoming Marxco component system."

block content
	// link(rel="stylesheet" href="up.css")
	style.
		.preview-wall {
		-webkit-box-align: center;
		-webkit-align-items: center;
		align-items: center;
		width: 960px;
		height: 576px;
		border: 1px #000 solid;
		margin: 10px auto 0;
		overflow: hidden;
		position: relative;
		flex-wrap: wrap;
		-moz-box-pack: left;
		justify-content: left;
		}
		.preview-wall span.logo {
		position: absolute;
		right: 0;
		bottom: 0;
		width: 151px;
		height: 39px;
		background-image: url("data:image/png;base64,");
		}
		.preview-wall .version {
		font-family: monospace;
		font-size: 12px;
		position: absolute;
		margin-left: 0.75em;
		left: 0;
		bottom: 0;
		}
		.preview-wall .column {
		text-align: center;
		-webkit-box-flex: 0;
		-webkit-flex: none;
		flex: none;
		width: 136px;
		padding: 0;
		}
		.preview-wall .column .mrx_ic {
		width: 48px;
		height: 48px;
		margin-bottom: 0.5rem;
		font-size: 3rem;
		}
		.preview-wall .column figure {
		padding-top: 1em;
		padding-bottom: 0.75em;
		}
		.preview-wall .column figcaption {
		font-size: 0.75rem;
		}
	// include layout/dataset/_icons
	-
		var previewShowcase = [
			{ name: "finance-liberapay" },
			{ name: "finance-liberapay-square" },
			{ name: "social-pawoo" },
			{ name: "social-pawoo-square" },
			{ name: "social-deviantart-square" },
			{ name: "social-flickr-square" },
			{ name: "social-mastodon-square" },
			{ name: "social-medium-square" },
			{ name: "social-steemit" },
			{ name: "social-steemit-square" },
			{ name: "logo-gitlab-square" },
			{ name: "doc-afpub" },
			{ name: "doc-afphoto" },
			{ name: "doc-afdesign" },
			{ name: "weight" },
			{ name: "gem-asscher" },
			{ name: "gem-cushion" },
			{ name: "gem-emerald" },
			{ name: "gem-heart" },
			{ name: "gem-marquise" },
			{ name: "gem-princess" },
			{ name: "gem-radiant" },
			{ name: "logo-github" },
			{ name: "logo-gumroad-square" },
		]
	.columns.preview-wall
		span.version 1.6.0
		span.logo
		each item, index in previewShowcase
			if item.name != 'badge-designed-with'
				.column
					// figure(style="background: red; border-radius: 6px;")
					figure
						span(class=prefix + 'ic ' + prefix + 'ic-' + item.name)
						figcaption
							| #{item.name}

